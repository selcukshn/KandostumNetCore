<section id="son-ilanlar pb-5">
    <h1 class="text-center section-title bg-gradient bg-danger text-white p-5">Kan ver Hayat kurtar</h1>
    <div class="container bg-white py-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 gy-3 mb-3">
            @foreach (var ilanlar in Model)
            {
                <div class="col">
                    <div class="card">
                        <div class="blood-pack">
                            <img src="images/bloodpack-clean-crop-3.jpg" class="card-img-top">
                            <span class="blood-type">@ilanlar.HastaKanGrubu</span>
                        </div>
                        <div class="card-body">
                            <h2 class="card-title h5">@ilanlar.HastaAd</h2>
                            <h6 class="card-subtitle mb-2 text-muted">@(ilanlar.HastaSehir+"/"+ilanlar.HastaIlce)</h6>
                            <p class="card-text">
                                @((ilanlar.IlanOzet as String).Count()>250?
                            (ilanlar.IlanOzet as String).Substring(0,250)+"...":ilanlar.IlanOzet)
                            </p>
                            <div class="text-end">
                                <a asp-controller="home" asp-action="ilandetay" asp-route-id="@ilanlar.IlanId"
                                class="btn btn-danger">İlanı görüntüle</a>
                            </div>
                        </div>
                        <div class="card-footer text-end">

                            @if ((DateTime.Now - ilanlar.IlanTarih).Days.ToString() == "0")
                            {
                                <small class="text-muted">
                                    Bugün
                                </small>
                            }
                            else
                            {
                                <small class="text-muted">
                                    @((DateTime.Now - ilanlar.IlanTarih).Days.ToString()) gün önce
                                </small>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="w-100 text-center">
            <a asp-controller="home" asp-action="ilanlar" class="btn btn-outline-secondary w-25">Daha Fazla</a>
        </div>
    </div>
</section>
<section id="kan-bagisi-bilgi">
    <h1 class="text-center section-title bg-gradient bg-danger text-white p-5">Kan bağışı hakkında</h1>
    <div class="container bg-white py-2 py-lg-5 mb-5">
        <div class="row g-2">
            <div class="col-12 col-lg-6">
                <img src="images/kanbagisbilgi.jpg" class="img-fluid">
            </div>
            <div class="col-12 col-lg-6">
                <table class="table table-hover table-bordered caption-top">
                    <caption class="bg-danger text-white ps-2 fw-bold">Kan uyumluluk tablosu</caption>
                    <thead>
                        <tr>
                            <th>Kan Grubu</th>
                            <th>Kime Kan Verir</th>
                            <th>Kimden Kan Alır</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th class="text-darkred">A Rh+</th>
                            <td>A Rh+ , AB Rh+</td>
                            <td>A Rh+ , A Rh- , 0 Rh+ , 0 Rh-</td>
                        </tr>
                        <tr>
                            <th class="text-darkred">B Rh+</th>
                            <td>B Rh+ , AB Rh+</td>
                            <td>B Rh+ , B Rh- , 0 Rh+ , 0 Rh-</td>
                        </tr>
                        <tr>
                            <th class="text-darkred">AB Rh+</th>
                            <td>AB Rh+</td>
                            <td>Herkesten alır</td>
                        </tr>
                        <tr>
                            <th class="text-darkred">0 Rh+</th>
                            <td>0 Rh+ , A Rh+ , B Rh+ , AB Rh+</td>
                            <td>0 Rh+ , 0 Rh-</td>
                        </tr>
                        <tr>
                            <th class="text-darkred">A Rh-</th>
                            <td>A Rh+ , A Rh- , AB Rh+ , AB Rh-</td>
                            <td>A Rh- , 0 Rh-</td>
                        </tr>
                        <tr>
                            <th class="text-darkred">B Rh-</th>
                            <td>B Rh+ , B Rh- , AB Rh+ , AB Rh-</td>
                            <td>B Rh- , 0 Rh-</td>
                        </tr>
                        <tr>
                            <th class="text-darkred">AB Rh-</th>
                            <td>AB Rh+ , AB Rh-</td>
                            <td>0 Rh- , A Rh- , B Rh- , AB Rh-</td>
                        </tr>
                        <tr>
                            <th class="text-darkred">0 Rh-</th>
                            <td>Herkese verir</td>
                            <td>0 Rh-</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
